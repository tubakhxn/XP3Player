<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<fx:root type="ContextMenu" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <items>
      <MenuItem fx:id="createLibrary" mnemonicParsing="false" text="Create + Open New Library">
         <graphic>
            <FontIcon iconColor="#d4ff00" iconLiteral="typ-plus" iconSize="24" selectionEnd="0" />
         </graphic>
      </MenuItem>
      <MenuItem fx:id="showTheLibrary" mnemonicParsing="false" text="Select the Library in Viewer">
         <graphic>
            <FontIcon iconColor="#d4ff00" iconLiteral="typ-eye-outline" iconSize="24" selectionEnd="0" selectionStart="0" />
         </graphic>
      </MenuItem>
      <MenuItem fx:id="deleteLibrary" mnemonicParsing="false" text="Delete Library">
         <graphic>
            <FontIcon iconColor="#f83e3e" iconLiteral="icm-books" iconSize="21" />
         </graphic>
      </MenuItem>
      <SeparatorMenuItem mnemonicParsing="false" />
      <MenuItem fx:id="closeOtherTabs" mnemonicParsing="false" text="Close other Tabs" />
      <MenuItem fx:id="closeTabsRight" mnemonicParsing="false" text="Close Tabs to the Right" />
      <MenuItem fx:id="closeTabsLeft" mnemonicParsing="false" text="Close Tabs to the Left" />
      <SeparatorMenuItem mnemonicParsing="false" />
      <MenuItem fx:id="closeTab" mnemonicParsing="false" text="Close Tab">
         <graphic>
            <FontIcon iconColor="#f83e3e" iconLiteral="fas-times" iconSize="24" />
         </graphic>
      </MenuItem>
   </items>
</fx:root>
